<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ABB7B7"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_backcon"
            android:layout_height="32dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:onClick="GotoChildPage"
                android:background="@drawable/bg_rounded_corner">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_chid"
                    android:layout_gravity="center"
                    android:onClick="GotoChildPage"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="الأسعافات الخاصة بالأطفال"
                    android:textSize="18sp"
                    android:onClick="GotoChildPage"
                    android:textColor="#35404d"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical"
                android:onClick="GotoAid"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/bg_rounded_corner">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:onClick="GotoAid"
                    android:src="@drawable/ic_icon"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="الأسعافات الشائعة"
                    android:textSize="18sp"
                    android:onClick="GotoAid"
                    android:textColor="#35404d"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="EmergencyCall"
                android:gravity="center"
                android:background="@drawable/bg_rounded_corner">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_call"
                    android:onClick="EmergencyCall"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="الأتصال بالطوارئ"
                    android:onClick="EmergencyCall"
                    android:textSize="18sp"
                    android:textColor="#35404d"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</RelativeLayout>
